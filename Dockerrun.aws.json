{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "thaiblockdocker/fibo-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "thaiblockdocker/fibo-server",
            "hostname":"api",
            "essential": false
        },
        {
            "name": "worker",
            "image":"thaiblockdocker/fibo-worker",
            "hostname":"worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image":"thaiblockdocker/fibo-nginx",
            "hostname":"nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containnerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}